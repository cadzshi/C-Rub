<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailArticleActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <ImageView
                android:id="@+id/iv_detail_article"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_image_search_surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_detail_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/detail_title_article"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/iv_detail_article"
                app:layout_constraintStart_toStartOf="@+id/iv_detail_article"
                app:layout_constraintTop_toBottomOf="@+id/iv_detail_article" />

            <TextView
                android:id="@+id/tv_detail_article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_article_description"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:justificationMode="inter_word"
                app:layout_constraintEnd_toEndOf="@+id/tv_detail_article_title"
                app:layout_constraintStart_toStartOf="@+id/tv_detail_article_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_article_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>