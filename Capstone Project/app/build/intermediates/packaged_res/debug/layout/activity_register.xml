<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surface"
    tools:context=".view.register.RegisterActivity">

    <ImageView
        android:id="@+id/iv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/register"
        android:src="@drawable/img_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_register_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/register_msg"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/md_theme_primary"
        app:layout_constraintEnd_toEndOf="@+id/iv_register"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/iv_register"
        app:layout_constraintTop_toBottomOf="@+id/iv_register" />

    <ImageView
        android:id="@+id/iv_bottom_register"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/bottom_container_solid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_msg"
        android:contentDescription="@string/register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bottom_register"
        app:layout_constraintEnd_toEndOf="@+id/iv_bottom_register"
        app:layout_constraintStart_toStartOf="@+id/iv_bottom_register"
        app:layout_constraintTop_toTopOf="@+id/iv_bottom_register">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_person_24_surface"
            app:endIconTint="@color/md_theme_surface"
            android:hint="@string/name"
            app:boxStrokeColor="@color/md_theme_surface"
            android:textColorHint="@color/md_theme_surface"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/md_theme_surface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_surface"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_email_24_black"
            app:endIconTint="@color/md_theme_surface"
            android:hint="@string/email"
            app:boxStrokeColor="@color/md_theme_surface"
            android:textColorHint="@color/md_theme_surface"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/md_theme_surface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_surface"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etl_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/md_theme_surface"
            android:hint="@string/password"
            app:boxStrokeColor="@color/md_theme_surface"
            android:textColorHint="@color/md_theme_surface"
            app:hintAnimationEnabled="true"
            app:hintTextColor="@color/md_theme_surface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_surface"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/md_theme_surface"
            android:textColor="@color/md_theme_primary"
            android:text="@string/register" />

        <TextView
            android:id="@+id/tv_login_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/register_validation_msg"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/md_theme_surface"/>
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/login_here"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/md_theme_surface"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>